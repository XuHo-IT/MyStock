@model MyStock.ModelsData.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger text-center mb-4">⚠ Delete Confirmation</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0">
            <div class="card-header bg-danger text-white fw-bold">
                Are you sure you want to delete this product?
            </div>
            <div class="card-body">
                <h5 class="text-warning">Product Information</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 fw-bold text-success">
                        @Html.DisplayNameFor(model => model.Productname)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Productname)
                    </dd>

                    <dt class="col-sm-4 fw-bold text-success">
                        @Html.DisplayNameFor(model => model.Unitprice)
                    </dt>
                    <dd class="col-sm-8">
                        💲 @Html.DisplayFor(model => model.Unitprice)
                    </dd>

                    <dt class="col-sm-4 fw-bold text-success">
                        @Html.DisplayNameFor(model => model.Unitsinstock)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Unitsinstock) units
                    </dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <form asp-action="Delete" method="post" class="mb-0">
                    <input type="hidden" asp-for="Productid" />
                    <button type="submit" class="btn btn-danger">🗑 Confirm Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
            </div>
        </div>
    </div>
</div>
